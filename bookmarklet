javascript: (function() {
  var jquery = document.createElement('script');
  jquery.src = "https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js";
  document.getElementByTagName('head')[0].appendChild(jquery);

  var controller = document.createElement('script');
  controller.setAttribute('src', 'https://raw.githubusercontent.com/igandhi/NoMoreSpoilers/master/scripts/controller.js');
  document.body.appendChild(controller);
}());
